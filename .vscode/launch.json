    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Mocha Tests",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "program": "${workspaceFolder}/node_modules/.bin/_mocha",
        "args": [
          "'./test/*/**/*.test.js'",
          "--timeout",
          "999999",
          "--colors",          
          "--require",
          "esm"
        ]
      }
    ]
  }